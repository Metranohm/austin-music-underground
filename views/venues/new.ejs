<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/venues/new.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/venues" method="POST">
    <label for="title-input">Venue:</label>
    <input type="text" name="title" id="title-input">
    <label for="address-input">Address:</label>
    <input type="text" name="address" id="address-input">
    <label for="details-input">Details:</label>
    <input type="text" name="details" id="details-input">
    <label for="imageURL-input">ImageUrl:</label>
    <input type="text" name="imageURL" id="imageURL-input">
    <label for="website-input">Website:</label>
    <input type="text" name="website" id="website-input">
    <button type="submit">Add Venue</button>
  </form>
</main>

