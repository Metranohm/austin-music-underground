<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/venues/show.css" />
<%- include('../partials/nav') %>

<form id="add-venue" action="/profiles/<%+ venue._id %>/venues" method="POST">
  <select name="venueId">
    <% venues.forEach(venue => { %>
      <option value="<%= venue._id %>"><%= venue.name %></option>
    <% }) %>
  </select>
  <button type="submit">Add to Food</button>
</form>

  <h2>Venue</h2>
  <form 
    id="add-venue-form"
    action="/flights/<%= flight._id %>/tickets"
    method="POST"
  >
    <label for="price">Price</label>
    <input name="price" id="content" type="number">
    <label for="seat-select">Seat :</label>
    <input name="seat" required pattern="[A-F][1-9]\d?" type="text">
    <button type="submit">Add Ticket</button>
  </form>
  <% if (flight.tickets.length) { %>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Seat</th>
        </tr>
      </thead>
      <tbody>
        <% flight.tickets.forEach(function(ticket) { %>
          <tr>
            <td><%= ticket.createdAt.toLocaleDateString() %></td>
            <td><%= ticket.seat %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h3>No Tickets Yet</h3>
  <% } %>

</main>
  
<%- include('../partials/footer') %>